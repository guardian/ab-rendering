{
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"devDependencies": {
		"lerna": "^3.8.0",
		"pretty-quick": "^2.0.1",
		"husky": "^4.2.5",
		"prettier": "^2.0.5"
	},
	"scripts": {
		"test": "lerna run --parallel test",
		"tsc": "lerna run --parallel tsc",
		"lint": "lerna run --parallel lint",
		"build": "lerna run --parallel build",
		"dev": "lerna run --parallel dev",
		"validate": "lerna run --parallel validate",
		"publishNext": "lerna publish --preid next",
		"link": "cd packages/ab-core && yarn link && cd ../../packages/ab-react && yarn link @guardian/ab-core"
	},
	"husky": {
		"hooks": {
			"pre-push": "pretty-quick --staged && lerna run lint && lerna run tsc && lerna run test"
		}
	}
}
